		//			finish hand, player loses stash, dealer gets stash
		
		boolean play = true;		
		while(play || Player.getStash() != 0)
		{
			for(int i = 0; i > 5; i++)
			{
				
				Dealer.dealToPlayer(null);
				System.out.println("Would you like to bet?");
				
				int input = sc.nextInt();
				
				switch(input)
